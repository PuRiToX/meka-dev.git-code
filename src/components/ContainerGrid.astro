---
interface Props {
    tittle: string,
    explora: string,
    href:string,
}

const {tittle, explora, href} = Astro.props
---
<div class=" text-white w-11/12 md:w-11/12 mx-auto mt-12 bg-neutral-700 bg-opacity-20 border border-neutral-800 rounded-xl p-4 sm:p-8 pt-4">
    <h1 class=" text-center font-extrabold text-2xl mb-5 text-gray-300">{tittle}</h1>
    
    <div class=" grid md:grid-cols-2 lg:grid-cols-3 gap-1 md:max-w-screen-md lg:max-w-screen-xl m-auto">
        <slot/>
    </div>
    
    
    <a class="mt-8 font-semibold block text-right text-gray-300 cursor-pointer hover:text-orange-400 duration-500 ease-in-out transition-colors" href={href}>{explora}</a>
</div>