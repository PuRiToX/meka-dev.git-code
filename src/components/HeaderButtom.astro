---
interface Props {
    title: string,
    href: string,
    responsive: boolean
}

const {href, responsive, title} = Astro.props

---


    <a title={title} class="text-white cursor-pointer hover:bg-orange-800 font-medium rounded-lg px-5 py-2.5 text-center inline-flex items-center  mr-2 hover:shadow-lg transition-all duration-200 ease-in-out hover:scale-90 scale-80 tex-base gap-x-2 opacity-90 hover:opacity-100" href={href}>
        
        

        <slot name="before-text" />
        
        
        <div class="hidden lg:block">

            <slot />
        </div>
        <slot name="after-text" />
    </a>
